<?php
namespace WP_Speak;

class Assert {

    function is_gte($arg_higher, $arg_lower) {
        return $arg_higher >= $arg_lower;
    }

    function is_gt($arg_higher, $arg_lower) {
        return $arg_higher > $arg_lower;
    }

    function is_lte($arg_lower, $arg_higher) {
        return $arg_lower <= $arg_higher;
    }

    function is_lt($arg_lower, $arg_higher) {
        return $arg_lower < $arg_higher;
    }

    function in_range($arg_value, $arg_low_range, $arg_high_range) {
        return $arg_value >= $arg_low_range && $arg_value < $arg_high_range;
    }

}

function set_default($string, $default) {
    if ("" === $string) {
        return $default;
    } else {
        return $string;
    }
}

